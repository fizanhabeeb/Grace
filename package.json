{
  "name": "hotelgracepos",
  "version": "1.0.0",
  "main": "index.js",
  "homepage": "./",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "postinstall": "jetify",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run web\" \"wait-on http://localhost:8081 && cross-env ELECTRON_START_URL=http://localhost:8081 electron main.js\"",
    "build:web": "expo export --platform web",
    "build:windows": "npm run build:web && electron-builder --win"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/bottom-tabs": "^7.9.0",
    "@react-navigation/native": "^7.1.26",
    "@react-navigation/native-stack": "^7.9.0",
    "expo": "~54.0.30",
    "expo-document-picker": "~14.0.8",
    "expo-file-system": "~19.0.21",
    "expo-image-picker": "~17.0.10",
    "expo-linking": "~8.0.11",
    "expo-print": "~15.0.8",
    "expo-sharing": "~14.0.8",
    "expo-status-bar": "~3.0.9",
    "fuse.js": "^7.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0"
  },
  "private": true,
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "jetifier": "^2.0.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.hotelgrace.pos",
    "productName": "Hotel Grace POS",
    "directories": {
      "output": "release-builds"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "assets/**/*"
    ]
  }
}